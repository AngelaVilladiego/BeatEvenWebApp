
@{
    ViewData["Title"] = "Home Page";
    ViewData["Username"] = ViewBag.Username;
}
    <link rel="stylesheet" href="~/css/home.css" />
        <div id="img-header-div">
            <img id="img-header" src="~/Assets/dumbbells-mat-flip.png" />
        </div>
        <main>
            <div class="row">
                <div class="user">
                    <div class="profile-circle">
                        <svg class="bi bi-person icon user-icon" width="2em" height="2em" viewBox="0 0 16 16" fill="#444444" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd" d="M13 14s1 0 1-1-1-4-6-4-6 3-6 4 1 1 1 1h10zm-9.995-.944v-.002.002zM3.022 13h9.956a.274.274 0 00.014-.002l.008-.002c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664a1.05 1.05 0 00.022.004zm9.974.056v-.002.002zM8 7a2 2 0 100-4 2 2 0 000 4zm3-2a3 3 0 11-6 0 3 3 0 016 0z" clip-rule="evenodd" />
                        </svg>
                    </div>
                    <h1>@ViewBag.Username</h1>
                </div>
                <div class="quote">
                    "Good things come to those who sweat"
                </div>
            </div>
            <div class="row home-button-container col align-self-center">
                <div id="runner-div">
                    <img id="runner" src="~/Assets/runner2.jpg" />
                </div>
                <a asp-controller="Home" asp-action="ToWorkout">
                    <div class="new-workout home-button">
                        <svg class="bi bi-plus" width="6rem" height="6rem" viewBox="0 0 16 16" fill="#0082B4" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd" d="M8 3.5a.5.5 0 01.5.5v4a.5.5 0 01-.5.5H4a.5.5 0 010-1h3.5V4a.5.5 0 01.5-.5z" clip-rule="evenodd" />
                            <path fill-rule="evenodd" d="M7.5 8a.5.5 0 01.5-.5h4a.5.5 0 010 1H8.5V12a.5.5 0 01-1 0V8z" clip-rule="evenodd" />
                        </svg>
                        <br />
                        <h2>Create Workout</h2>
                    </div>
                </a>
                <a asp-controller="Home" asp-action="History">
                    <div class="show-history home-button">
                        <svg class="bi bi-clock" width="5rem" height="5rem" viewBox="0 0 16 16" fill="#0082B4" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd" d="M8 15A7 7 0 108 1a7 7 0 000 14zm8-7A8 8 0 110 8a8 8 0 0116 0z" clip-rule="evenodd" />
                            <path fill-rule="evenodd" d="M7.5 3a.5.5 0 01.5.5v5.21l3.248 1.856a.5.5 0 01-.496.868l-3.5-2A.5.5 0 017 9V3.5a.5.5 0 01.5-.5z" clip-rule="evenodd" />
                        </svg>
                        <br /><br />
                        <h2>Workout History</h2>
                    </div>
                </a>
            </div>
        </main>